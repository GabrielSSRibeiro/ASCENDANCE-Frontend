{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "~components/*": ["./src/components/*"],
      "~particles/*": ["./src/components/particles/*"],
      "~atoms/*": ["src/components/atoms/*"],
      "~molecules/*": ["./src/components/molecules/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
